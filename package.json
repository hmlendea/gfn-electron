{
  "name": "geforcenow-electron",
  "appId": "com.github.hmlendea.${name}",
  "productName": "GeForce NOW",
  "version": "2.0.1",
  "description": "A Linux desktop web app for GeForce NOW",
  "main": "./build/main.js",
  "scripts": {
    "start": "npm run compile && electron .",
    "compile": "tsc",
    "build": "npm run compile && electron-builder"
  },
  "build": {
    "asar": false,
    "files": [
      "build/**/*",
      "package.json",
      "main.js",
      "com.github.hmlendea.${name}.desktop"
    ],
    "linux": {
      "target": [
        "zip",
        "AppImage"
      ],
      "category": "Games",
      "artifactName": "${name}_${version}_linux.${ext}"
    },
    "extraFiles": [
      "com.github.hmlendea.${name}.desktop"
    ]
  },
  "repository": "https://github.com/hmlendea/gfn-electron",
  "keywords": [
    "Electron",
    "gfn",
    "geforcenow",
    "geforce-now"
  ],
  "author": "Hora»õiu Mlendea <Horatiu.Mlendea@ProtonMail.com>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@types/discord-rpc": "^4.0.8",
    "discord-rpc": "^4.0.1",
    "typescript": "^5.3.3"
  }
}
